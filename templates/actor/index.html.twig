{% extends 'base.html.twig' %}

{% block title %}{{'Acteurs' | trans }}{% endblock %}

{% block body %}
    <h1>{{'Acteurs' | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Noms' | trans}}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">{{'Voir plus' | trans }}</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">{{'Modifier' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">{{'Cr√©er acteur' | trans }}</a>
{% endblock %}