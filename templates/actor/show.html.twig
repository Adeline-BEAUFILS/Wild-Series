{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Acteurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Séries</th>
                  <td><ul>
                    {% for program in actor.programs %}
                        <li><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }}</a></li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul></td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}