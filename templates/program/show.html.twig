{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    
    <div class="container-card-show"> 

        <div class="card" style="width: 50%; display:flex; ">
            <img class="card-img-top" src="{{ program.poster }}" alt="Card image cap">
            <div class="card-body">
                <h3 class="card-title">{{ program.title }}</h3>
                <h5> Résumé :</h5>
                <p class="card-text">{{ program.summary }}</p> 
                <div class="container-list">
                <ul>
                <h5> Acteurs :</h5>
                {% for actor in program.actors %}
                    <li><a href="{{ path('actor_show', {'id': actor.id}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
                </ul>
                <ul>
                <h5> Saisons :</h5>
                {% for season in program.seasons %}
                    <li><a href="{{ path('season_show', {'id': season.id}) }}">{{ season.number }}</a></li>
                {% else %}
                    <li>Aucun saisons pour cette série</li>
                {% endfor %}
                </ul>
                </div>
                <div class="button">
                <a href="{{ path('program_index') }}" class="btn btn-primary">Retour</a>
                <a href="{{ path('program_edit', {'slug': program.slug}) }}" class="btn btn-primary">Editer</a>
                <a href="{{ path('program_delete', {'id': program.id} ) }}" class="btn btn-primary">{{ include('program/_delete_form.html.twig') }}</a>
                <div>
            </div>
        </div>
    </div>   
    
{% endblock %}