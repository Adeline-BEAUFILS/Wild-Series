{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <div class="media-body">
  
    <h1 class="mt-0"> Saison {{ season.number }} de {{ program.title }}</h1>
    <p>{{ season.description }}</p>
    <ul>
        <p> Liste des épisodes : </p>
        {% for episode in episodes %}
        <li> 
          <p><a href="{{ path('program_episode_show', { "program":program.id ,"season": season.id,"episode": episode.id })}}"> Episode {{episode.number }} : {{ episode.title }}</p>
        </li>
        {% endfor %}
    </ul>
    
   
    
  </div>
</div>
 
<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}