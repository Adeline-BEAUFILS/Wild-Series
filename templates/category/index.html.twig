{% extends 'base.html.twig' %}

{% block title %}All category's{% endblock %}

{% block body %}
    <h1>Toutes les catégories ! </h1>
    {% for category in categories %}
        <div>
        
        {# Lien vers la fiche de la category: #}
        <a href="{{ path("category_show", { categoryName: category.name }) }}">{{category.name}}</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <p><a href="{{ path('category_new') }}">
        Ajouter une catégorie
    </a></p>

    <p><a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a></p>
{% endblock %}