{% extends 'base.html.twig' %}

{% block title %}{{'Saisons' | trans}}{% endblock %}

{% block body %}
    <h1>{{'Saisons' | trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Numéro' | trans }}</th>
                <th>{{'Année' | trans }}</th>
                <th>{{'Description' | trans }}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a href="{{ path('season_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_new') }}">{{'Créer Saison' | trans}}</a>
{% endblock %}